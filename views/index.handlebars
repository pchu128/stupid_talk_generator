<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title text-center">你想對誰說幹話？</h5>
          <hr>
          <form method="POST" action="/" class="">
            <div class="row d-flex flex-row justify-content-around mb-5">
              {{#each job}}
                <div class="form-group form-col mb-2 align-items-center">
                  <label for="{{ this.name }}" class="col-md-4 col-form-label">
                    <img src="{{ this.image }}" class="rounded"
                      alt="" height="150px" width="150px">
                  </label>
                  <div class="col-md-8">
                    <div class="custom-control custom-checkbox">
                      <input class="form-check-input" type="radio" name="option" id="{{ this.name }}" value="{{ this.id }}" {{#if_eq option '{{job.0.id}}'}} checked {{/if_eq}}>
                      <label class="form-check-label" for="{{ this.name }}">{{ this.nameTW }}</label>
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>

            <div class="row d-flex flex-column align-items-center">
              
              <button class="btn btn-success mb-4" type="submit" style="width:200px;">產生幹話</button>
              
              {{#if sentence}}
              <div class="alert alert-info pb-0" role="alert">
                <p class="mr-2 text-center">{{ sentence }}</p>
              </div>
              {{/if}}
              
            </div>
          </form>
        </div>

        <small class="card-footer text-muted text-right">
          Idea is inspired by <a href="https://tw.alphacamp.co/" target="_blank">Alpha Camp</a>
        </small>
      </div>
    </div>
  </div>
</div>